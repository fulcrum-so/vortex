{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>spiraldb/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "arrow"
      ],
      "matchPackageNames": [
        "parquet"
      ],
      "groupName": "arrow"
    },
    {
      "matchPackagePrefixes": [
        "datafusion"
      ],
      "groupName": "datafusion"
    },
    {
      "matchPackagePrefixes": [
        "futures"
      ],
      "groupName": "futures"
    }
  ]
}
